<section class="col-md-4" id="sidecontainer">
	<div class="login">
		<div class="container sidecontainerback">
			<div class="form">
	      <%= form_for(:session, url: login_path) do |f| %>
					<label for="uname"><b>Email</b></label>
	        <%= f.email_field :email, :placeholder => "" %>
					<label for="psw"><b>Contraseña</b></label>
	        <%= f.password_field :password, :placeholder => "" %>
	        <%= f.submit "Log in", class: "btn-submit btn-outline-primary" %>
	      <% end %>
	    </div>
			<span class="psw"><a href="#" style="color:white;">Olvidaste tu contraseña?</a></span>
			<form action="/signup">
				<button type="submit" class="btn btn-outline-secondary">SignUp</button>
			</form>
		</div>
	</div>
</section>
