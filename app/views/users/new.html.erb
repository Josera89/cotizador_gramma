<div class="login">
  <div class="container">
    <div class="form">

    <h1>Sign up</h1>

    <%= form_for :user, url: {action: "create"}, html: {class: "nifty_form"} do |f| %>
      <%= f.text_field :first_name %>
      <%= f.text_field :last_name %>
      <%= f.text_field :email %>
      <%= f.password_field :password %>
      <%= f.submit "Create" %>
    <% end %>


    </div>
  </div>
</div>
