<style>
body, h1,h2,h3,h4,h5,h6 {font-family: "Montserrat", sans-serif}
.w3-row-padding img {margin-bottom: 12px}
/* Set the width of the sidebar to 120px */
.w3-sidebar {width: 120px;background: #222;}
/* Add a left margin to the "page content" that matches the width of the sidebar (120px) */
#main {margin-left: 120px}
/* Remove margins from "page content" on small screens */
@media only screen and (max-width: 600px) {#main {margin-left: 0}}
</style>
<body class="w3-new">

<!-- Icon Bar (Sidebar - hidden on small screens) -->
<nav class="w3-sidebar w3-bar-block w3-small w3-hide-small w3-center" id="sidenav">
  <a href="/home" class="w3-bar-item w3-button w3-padding-large w3-hover-purple">
    <!-- <i class="fa fa-home w3-xxlarge"></i> -->
    <p>INICIO</p>
  </a>
  <a href="/bills" class="w3-bar-item w3-button w3-padding-large w3-hover-purple">
    <p>REGISTROS</p>
  </a>
  <a href="#photos" class="w3-bar-item w3-button w3-padding-large w3-hover-purple">
    <!-- <i class="fa fa-eye w3-xxlarge"></i> -->
    <p>AJUSTES</p>
  </a>
</nav>

<!-- Navbar on small screens (Hidden on medium and large screens) -->
<div class="w3-top w3-hide-large w3-hide-medium" id="myNavbar">
  <div class="w3-bar w3-black w3-opacity w3-hover-opacity-off w3-center w3-small">
    <a href="#" class="w3-bar-item w3-button" style="width:25% !important">INICIO</a>
    <!-- <a href="#about" class="w3-bar-item w3-button" style="width:25% !important">COTIZAR</a> -->
    <a href="#photos" class="w3-bar-item w3-button" style="width:25% !important">AJUSTES</a>
    <!-- <a href="#contact" class="w3-bar-item w3-button" style="width:25% !important">CONTACT</a> -->
  </div>
</div>

<div class="header">
  <div class="container">
    <h1>Registros</h1>
  </div>
</div>


<div class="bills">
  <div class="container">
    <div class="row">

      <!-- Your code here -->
      <% @bills.each do |bill| %>
        <div class="col-md-3 bill">
          <div class="">

            <!-- <h4>Cliente</h4> -->
            <h3 class="company"><%= bill.company %></h3>
            <p>fecha:</p>
            <h4 class="agent"><%= bill.created_at %></h4>
            <p>Agente:</p>
            <h4 class="agent"><%= bill.agent %></h4>
            <p>Especificaciones:</p>
            <h4 class="specifications"><%= bill.specifications %></h4>
            <p>Email:</p>
            <h4 class="email"><%= bill.email %></h4>
            <p>Entrega:</p>
            <h4 class="deadline"><%= bill.deadline %></h4>
            <hr>
            <h5>Total: $ <%= bill.total %></h5>
            <strong><h3>Total + IVA: $ <%= bill.totalIva %></h3></strong>

            <!-- <h4 class="total">$ <%= bill.total %></h4> -->
            <%= link_to "Borrar", bill, :method => :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-danger", :id => "borrar" %>
          </div>
        </div>
      <% end %>
    </div>


  </div>
</div>
